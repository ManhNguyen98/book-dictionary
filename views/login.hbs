<div class="w-100 bg-light" style="height: 95vh;">
  <div class="container h-100">
    <div class="row justify-content-center h-100">
      <div class="col col-4">
        <form class="d-flex flex-column form-signin justify-content-center p-4 shadow bg-white" method="Post" action="/auth/login">
          <figure class="mb-4 d-flex justify-content-center m-0">
            <img class="logo" src="/images/logo.png" alt="">
          </figure>
          <label for="inputEmail" class="sr-only">Email address</label>
          <input type="email" id="inputEmail" name="email" class="form-control mb-3" placeholder="Email address" required="">
          <label for="inputPassword" class="sr-only">Password</label>
          <input type="password" id="inputPassword" class="form-control mb-3" placeholder="Password" required="" name="password">
          <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
        </form>
      </div>
    </div>
  </div>
</div>