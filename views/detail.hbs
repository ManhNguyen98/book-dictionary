    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title" id="modalRemove">Are you sure?</h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p class="m-0">
          The selected book will be <b>permanently deleted</b> and the files removed from your library. Are you sure?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times"></i> Cancel</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal" id="btnRemoveBook"><i class="fas fa-trash-alt"></i> Remove</button>
      </div>
    </div>
  </div>
</div>

<script>
  $('#publishDatePicker').datepicker({
    uiLibrary: 'bootstrap4'
  });
  $('#publishDatePicker1').datepicker({
    uiLibrary: 'bootstrap4'
  });
  $('#editMetadataSelect select').val('{{bookSelected.language_code}}').change();
  $('#formEditMeta .rate').each(function(i, el) {
    if (i <= parseInt('{{bookSelected.rating}}',10) - 1) {
      $(el).find('.star').addClass('rate-active fas')
    }
  })
  $(document).on('click', '#formEditMeta .rate', function () {
    if (!$(this).find('.star').hasClass('.rate-active')) {
      $(this)
        .siblings()
        .find('.star')
        .addClass('far')
        .removeClass('fas rate-active');
      $(this)
        .find('.star')
        .addClass('rate-active fas')
        .removeClass('far star-over');
      $(this)
        .prevAll()
        .find('.star')
        .addClass('fas')
        .removeClass('far star-over');
    }
  });
  $(document).ready(function() {
    $('.book-rate').each(function() {
      const rating = parseInt($(this).attr('data-rate'), 10);
      if (rating > 0) {
        let star = 0
        let child = ''
        while(star < rating) {
          child += '<i class="fas fa-star"></i>'
          star+=1
        }
        while(star < 5) {
          child += '<i class="far fa-star"></i>'
          star+=1
        }
        $(this).append(child)
      }
    })
  })
</script>